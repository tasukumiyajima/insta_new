<% if logged_in? %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-12 main-content">
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="row center">
    <div class="main-form col-6 col-xs-offset-3">
      <div class="box-1">
        <%= link_to image_tag("instagram.png", alt: "logo", width: "200px", class: "image_tag"), root_path %>

        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>
          <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        <% end %>

        <div class="title-border">または</div>

        <div class="facebook-login">
          <a href="/auth/facebook"><span class="fa fa-facebook-square"></span>Facebookでログイン</a>
        </div>
        
        <%= link_to "パスワードを忘れた場合", new_password_reset_path %>
      </div>

      <div class="box-2">
        <p class="align-items-center">アカウントをお持ちでないですか？ <%= link_to "登録する", signup_path %></p>
      </div>

      <p>ダウンロード</p>
      <%= link_to image_tag("appstore.png", alt: "logo", width: "150px"), "#" %>
      <%= link_to image_tag("googleplay.png", alt: "logo", width: "150px"), "#" %>
    </div>
  </div>
<%end%>
