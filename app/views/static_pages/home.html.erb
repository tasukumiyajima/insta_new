<% if logged_in? %>
  <div class="row">
    <div class="col-md-8">
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<div class="center jumbotron">
  <%= link_to image_tag("instagram.png", alt: "logo", width: "200px"), root_path %>
  
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :"メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :"パスワード" %>
      <%= link_to "パスワードを忘れた場合", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン状態を保存する</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>

    <p>アカウントをお持ちでないですか？ <%= link_to "登録する", signup_path %></p>
  </div>
</div>

<%= link_to image_tag("appstore.png", alt: "logo", width: "100px"), "#" %>
<%= link_to image_tag("googleplay.png", alt: "logo", width: "100px"), "#" %>

<%end%>
