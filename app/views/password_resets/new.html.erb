<% provide(:title, "パスワードをリセット") %>
<h1>ログインできない場合</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_resets_path, scope: :password_reset,
                    local: true) do |f| %>
      <%= f.label :"メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "ログインリンクを送信", class: "btn btn-primary" %>

      <p>または</p>
      <%= link_to "新しいアカウントを作成", signup_path %></p>
      <%= link_to "ログインに戻る", root_path %></p>
    <% end %>
  </div>
</div>