<% provide(:title, "お気に入り") %>
<div class="row">
  <div class="col-xs-12 main-content">
    <%= render "users/user_profile"%>
    <% if @user.bookmarked_microposts.any? %>
      <div class="micropost-title">お気に入りの写真</div>
    <% else %>
      <div class="micropost-title">お気に入りの写真はまだありません</div>
    <% end %>
    <hr>
    <% if @user.bookmarked_microposts.any? %>
      <div class="microposts-list">
        <% @user.bookmarked_microposts.each do |micropost| %>
          <div class="micropost-picture">
            <%= image_tag micropost.picture.url%>
          </div>
        <% end %>
      </div>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
