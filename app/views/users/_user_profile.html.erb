<div class="user-profile">
  <%= gravatar_for @user %>
  <div class="user-profile-content">
    <div class="user-title">
      <div class= "user-name">
        <%= @user.user_name if @user.user_name %>
      </div>
      <div class="user-title-right">
        <% if current_user?(@user) %>
          <%= link_to "プロフィールを編集する", edit_user_path(@user), 
                class: "btn btn-outline-secondary profile-link" %> <%# 自分のページの時の表示 %>
        <% else %>
          <%= render 'follow_form' if logged_in? %>   <%# 自分以外のユーザーの時に表示 %>
        <% end %>
      </div>
    </div>
    <div class="user-info">
      <div class="post-number">投稿 <%= @user.microposts.count %>件</div>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </div>
    <div class="user-basic-info">
      <%= @user.name %><br>
      <%= link_to @user.website, @user.website, target: "_blank" unless @user.website.nil? %><br>
      <%= @user.introduction %>
    </div>
  </div>
</div>
