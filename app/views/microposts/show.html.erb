<div class="row">
  <div class="col-xs-12 main-content">
    <div class="microposts">
      <div class="title-bar">
        <ul>
          <li><%= link_to gravatar_for(@micropost.user, size: 40), @micropost.user %></li>
          <li><span class="user"><%= link_to @micropost.user.name, @micropost.user %></span></li>
          <li class="bookmark-form">
            <%= render 'microposts/bookmark_form', micropost: @micropost %>
          </li>
        </ul>
      </div>
      <span class="picture">
        <%= image_tag @micropost.picture.url%>
      </span>
      <div class="content">
        <div class="micropost-content">
          <%= @micropost.content %>
        </div>
        <div class= "comments">
          <%= render 'microposts/comments', micropost: @micropost %>
        </div>
        <span class="timestamp">
          <%= time_ago_in_words(@micropost.created_at) %>前に投稿<br>
          <% if current_user?(@micropost.user) %>
            <%= link_to "投稿を削除", micropost_path, method: :delete,
                                            data: { confirm: "削除してよろしいですか？" } %>
          <% end %>
        </span>
        <div class="comment-post">
          <%= form_with(model: [@micropost, @comment], url: micropost_comments_path(@micropost.id),
                                                            method: :post, local: true, class: "comment-form") do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <%= f.text_field :content, class: "form-control", placeholder: "コメントを追加…" %>
            <%= f.submit 'コメントする', class: "form-btn"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>